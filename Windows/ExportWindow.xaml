<Window x:Class="Media_Player.Windows.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player.Windows"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Title="Export" Height="350" Width="500">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10,10,276,306">
            <TextBlock FontFamily="Arial" FontSize="15" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}">Playlists:</TextBlock>
            <Button x:Name="select_all_btn" FontFamily="Arial" FontSize="12" Content="Select all" BorderThickness="0" Margin="10, 0" Background="LightBlue" Click="select_all_btn_Click"/>
            <Button x:Name="deselect_all_btn" FontFamily="Arial" FontSize="12" Content="Deselect all" BorderThickness="0" Margin="10, 0" Background="LightBlue" Click="deselect_all_btn_Click"/>
        </StackPanel>
        <ListView x:Name="playlists_list" Background="{DynamicResource BackgroundBrush}" BorderThickness="0" Margin="10,33,250,10"/>
        <StackPanel Orientation="Vertical" Margin="255,105,13,76">
            <TextBlock x:Name="export_path_display" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="10" FontWeight="Bold" TextWrapping="WrapWithOverflow" Height="32">Export path: none</TextBlock>
            <Button x:Name="select_export_path_btn" FontFamily="Arial" FontSize="10" Content="Choose an export path" Background="#4287f5" BorderBrush="{DynamicResource ForegroundBrush}" Click="select_export_path_btn_Click"/>
            <TextBlock x:Name="total_playlist_items_display" FontFamily="Arial" FontSize="10" FontWeight="Bold" TextWrapping="WrapWithOverflow" Margin="0, 20, 0, 5" Text="Total playlist items: 0"/>
            <CheckBox x:Name="export_as_single_file_check" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="14" Content="Export as a single file" IsChecked="False" Click="export_as_single_file_check_Click" IsEnabled="False"/>
            <CheckBox x:Name="save_playlist_item_playcounts_check" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="12" Content="Keep playlist items play counts" IsChecked="True" Click="save_playlist_item_playcounts_check_Click" IsEnabled="False"/>
            <Button x:Name="export_btn" FontFamily="Arial" FontSize="14" Content="Export" Margin="0, 20, 0, 0" Background="LimeGreen" Click="export_btn_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
