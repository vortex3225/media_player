<Window x:Class="Media_Player.CompactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Closed="Window_Closed"
        Icon="/Sprites/media_player.ico"
        Title="(Compact) Media Player (Compact)" Height="250" Width="450">
    <Viewbox Stretch="Uniform">
        <Grid Height="80" Width="180" VerticalAlignment="Bottom">
            <TextBlock x:Name="song_title" Foreground="{DynamicResource ForegroundBrush}" Text="No song currently playing" TextAlignment="Center" FontSize="8.5" FontFamily="Arial" Margin="0,5,0,64"/>
            <TextBlock x:Name="current_playlist" Foreground="{DynamicResource ForegroundBrush}" Text="No playlist" TextAlignment="Center" FontSize="6.5" FontFamily="Arial" Margin="0,16,0,54"/>
            <TextBlock x:Name="next_song_display" Foreground="{DynamicResource ForegroundBrush}" Text="Next song: unknown" TextAlignment="Center" FontSize="6.5" FontFamily="Arial" Margin="0,26,0,45"/>

            <StackPanel x:Name="volume_panel" Orientation="Horizontal" Margin="0,40,0,30">
                <TextBlock x:Name="volume_display" Foreground="{DynamicResource ForegroundBrush}" Text="Volume: 15" TextAlignment="Center" FontFamily="Arial" FontSize="4.5" Height="5" Width="28"/>
                <Slider x:Name="volume_bar" Minimum="0" Maximum="100" ValueChanged="volume_bar_ValueChanged"  Margin="3, 0, 0, 0" Width="147" Height="6">
                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Width" Value="5"/>
                            <Setter Property="Height" Value="6"/>
                            <Setter Property="MaxWidth" Value="5"/>
                            <Setter Property="MaxHeight" Value="6"/>
                        </Style>
                    </Slider.Resources>
                </Slider>
            </StackPanel>
            <StackPanel x:Name="media_display_panel" Orientation="Horizontal" Margin="0,55,0,17">
                <TextBlock x:Name="current_display" Foreground="{DynamicResource ForegroundBrush}" FontSize="5" TextAlignment="Center" FontFamily="Arial" Margin="2.5, 0, 5, 0" Text="00:00" Height="6"/>
                <Slider x:Name="media_pos_bar" PreviewMouseDown="volume_bar_PreviewMouseDown" PreviewMouseUp="volume_bar_PreviewMouseUp" Minimum="0" Maximum="100" Width="144">
                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Width" Value="5"/>
                            <Setter Property="MaxWidth" Value="5"/>
                            <Setter Property="Height" Value="7"/>
                            <Setter Property="MaxHeight" Value="5"/>
                        </Style>
                    </Slider.Resources>
                </Slider>
                <TextBlock x:Name="total_display" Foreground="{DynamicResource ForegroundBrush}" FontSize="5" TextAlignment="Center" FontFamily="Arial" Margin="0, 0, 0, 0" Text="00:00" Height="6"/>
            </StackPanel>

            <StackPanel x:Name="media_controls" Orientation="Horizontal" Margin="0,63,0,0">
                <Button x:Name="previous_song_btn" Click="previous_song_btn_Click" BorderThickness="0" Width="20" Background="Transparent" Margin="5, 0, 10, 0" Height="15">
                    <Image>
                        <Image.Source>./Sprites/Light/previous.png</Image.Source>
                    </Image>
                </Button>
                <Button x:Name="rewind_current_song_btn" Click="rewind_current_song_btn_Click" BorderThickness="0" Width="20" Height="15" Background="Transparent">
                    <Image>
                        <Image.Source>./Sprites/Light/rewind.png</Image.Source>
                    </Image>
                </Button>
                <Button x:Name="repeat_btn" Click="repeat_btn_Click" BorderThickness="0" Width="20" Height="15" Background="Transparent">
                    <Image>
                        <Image.Source>./Sprites/Light/repeat_untriggered.png</Image.Source>
                    </Image>
                </Button>
                <Button x:Name="pause_btn" BorderThickness="0" Width="20" Height="15" Click="pause_btn_Click" Margin="13, 0, 0, 0" Background="Transparent">
                    <Image>
                        <Image.Source>./Sprites/Light/pause.png</Image.Source>
                    </Image>
                </Button>
                <Button x:Name="shuffle_btn" BorderThickness="0" Width="20" Height="15" Click="shuffle_btn_Click" Background="Transparent">
                    <Image>
                        <Image.Source>./Sprites/Light/shuffle_untriggered.png</Image.Source>
                    </Image>
                </Button>
                <Button x:Name="skip_song_btn" BorderThickness="0" Width="20" Click="skip_song_btn_Click" Background="Transparent" Margin="25, 0, 0, 0" Height="15">
                    <Image>
                        <Image.Source>./Sprites/Light/skip.png</Image.Source>
                    </Image>
                </Button>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>