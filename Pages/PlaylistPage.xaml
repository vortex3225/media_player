<Page x:Class="Media_Player.Objects.PlaylistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Media_Player.Objects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlaylistPage"
      x:Name="playlist_page_display"
      Background="{DynamicResource BackgroundBrush}"
      >

    <Viewbox Stretch="Uniform">
        <Grid Height="450" Width="800">
            <TextBlock FontFamily="Arial" Foreground="{DynamicResource ForegroundBrush}" FontSize="14" Margin="18,35,662,396">Current playlists:</TextBlock>
            <StackPanel Orientation="Horizontal" x:Name="current_playlist_btn_panel" Margin="143,35,297,396">
                <Button x:Name="edit_selected_playlist_btn" FontFamily="Arial" Click="edit_selected_playlist_btn_Click" FontSize="12" Background="Orange" Height="16" Width="92">Edit selected</Button>
                <Button x:Name="remove_selected_playlist_btn" FontFamily="Arial" Click="remove_selected_playlist_btn_Click" FontSize="11" Background="Red" Height="16" Width="92" Margin="35, 0, 0, 0">Remove selected</Button>
                <Button x:Name="load_selected_playlist_btn" FontFamily="Arial" Click="load_selected_playlist_btn_Click" FontSize="11" Background="Green" Height="16" Width="92" Margin="35, 0, 0, 0">Load selected</Button>
            </StackPanel>
            <ListView x:Name="current_playlists" Background="{DynamicResource BackgroundBrush}" Margin="18,69,311,139">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <StackPanel x:Name="playlist_creator_panel" Orientation="Vertical" Margin="18,323,311,0">
                <Label Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="13" Height="24">Create playlist:</Label>
                <StackPanel Orientation="Horizontal" Height="25">
                    <Label Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="10" Height="19">Name:</Label>
                    <TextBox Foreground="{DynamicResource ForegroundBrush}" Background="{DynamicResource BackgroundBrush}"  AcceptsReturn="False" x:Name="playlist_name_box" TextChanged="playlist_name_box_TextChanged" FontSize="10" FontFamily="Arial" Height="18" Width="428"/>
                </StackPanel>
                <StackPanel Height="25" Orientation="Horizontal">
                    <Label Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" FontSize="10" Height="20">Add items from:</Label>
                    <RadioButton Foreground="{DynamicResource ForegroundBrush}" x:Name="folder_file_radio_btn" FontFamily="Arial" Click="folder_file_radio_btn_Click" FontSize="10" Height="14" Margin="10, 0, 0, 0" Width="76">Folder or file</RadioButton>
                    <RadioButton Foreground="{DynamicResource ForegroundBrush}" x:Name="use_opened_folder_radio_btn" FontFamily="Arial" Click="use_opened_folder_radio_btn_Click" IsChecked="True" FontSize="10" Height="14" Margin="10, 0, 0, 0" Width="162">Use already opened folder/files</RadioButton>
                </StackPanel>
                <StackPanel x:Name="select_file_panel" Visibility="Collapsed" Orientation="Horizontal">
                    <Button x:Name="select_files_btn" FontFamily="Arial" FontSize="11" Click="select_files_btn_Click" Background="Orange" Visibility="Visible" Width="280" Margin="0, 0, 20, 0" Height="15">Select files</Button>
                    <RadioButton Foreground="{DynamicResource ForegroundBrush}" x:Name="file_select_radio_btn" IsChecked="True" Click="file_select_radio_btn_Click" FontFamily="Arial" FontSize="10" Margin="0, 0, 20, 0" Height="14">File</RadioButton>
                    <RadioButton Foreground="{DynamicResource ForegroundBrush}" x:Name="folder_select_radio_btn" Click="folder_select_radio_btn_Click" FontFamily="Arial" FontSize="10" Margin="0, 0, 20, 0" Height="14">Folder</RadioButton>
                </StackPanel>
                <Button x:Name="create_playlist_btn" FontFamily="Arial" FontSize="13" Click="create_playlist_btn_Click" Margin="15" IsEnabled="False" Background="Lime">Create playlist</Button>
            </StackPanel>
            <TextBlock x:Name="count_display" Foreground="{DynamicResource ForegroundBrush}" FontFamily="Arial" TextAlignment="Center" FontSize="16" Margin="503,39,5,391">Selected files: 0</TextBlock>
            <StackPanel x:Name="opened_list_btn_controlpanel" Orientation="Horizontal" Margin="508,69,10,364">
                <Button x:Name="select_all_btn" FontFamily="Arial" FontSize="12" Click="select_all_btn_Click" Background="LightBlue" Width="123">Select all</Button>
                <Button x:Name="deselect_all_btn" FontFamily="Arial" Width="123" Click="deselect_all_btn_Click" Background="LightBlue" Margin="36,0,0,0" FontSize="12" Content="Deselect all"/>
            </StackPanel>
            <ListView x:Name="opened_files_list" Background="{DynamicResource BackgroundBrush}" SelectionChanged="opened_files_list_SelectionChanged" Margin="508,91,10,10" SelectionMode="Extended">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Viewbox>
</Page>
